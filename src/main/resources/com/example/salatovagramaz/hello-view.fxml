<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="390.0" prefWidth="615.0" spacing="20.0" style="-fx-background-color: #43A862;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.salatovagramaz.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" alignment="CENTER" contentDisplay="CENTER" prefHeight="78.0" prefWidth="440.0" style="-fx-background-color: #7AF58C;" text="zadaj počet sačkov, kolko chceš použiť a klikni ake šaláty chceš spraviť." textAlignment="CENTER" underline="true" wrapText="true">
      <font>
         <Font size="18.0" />
      </font>
      <effect>
         <Blend />
      </effect></Label>
    <TextField fx:id="numbOfSack" alignment="CENTER" prefHeight="35.0" prefWidth="582.0" style="-fx-background-color: #99FFA8;">
      <font>
         <Font size="18.0" />
      </font></TextField>
    <Button onAction="#onVelkySal" prefHeight="69.0" prefWidth="126.0" style="-fx-background-color: #F57B7A;" text="Velky šalát">
      <font>
         <Font size="14.0" />
      </font></Button>
    <Button onAction="#onMalySal" prefHeight="67.0" prefWidth="127.0" style="-fx-background-color: #F57B7A;" text="Záhradný šalát">
      <font>
         <Font size="14.0" />
      </font></Button>
</VBox>
